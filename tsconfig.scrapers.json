{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "./dist",
    "rootDir": "./",
    "noEmit": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true
  },
  "include": [
    "scrapers/**/*.ts",
    "lib/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "app",
    "components",
    ".next"
  ]
}
